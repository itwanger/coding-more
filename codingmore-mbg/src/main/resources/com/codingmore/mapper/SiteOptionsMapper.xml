<mapper namespace="com.codingmore.mapper.SiteOptionsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.codingmore.model.SiteOptions">
        <id column="option_id" property="optionId" />
        <result column="option_name" property="optionName" />
        <result column="option_value" property="optionValue" />
        <result column="site_id" property="siteId" />
